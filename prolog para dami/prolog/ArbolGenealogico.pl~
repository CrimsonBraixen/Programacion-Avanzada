hombre(pedro).
hombre(manuel).
hombre(arturo).
mujer(maría).
padre(pedro, manuel).
padre(pedro, arturo).
padre(pedro, maría).

niño(X,Y):-padre(Y,X).
hijo(X,Y):-padre(Y,X),hombre(X).
hija(X,Y):-padre(Y,X),mujer(Y).
hermanoOHermana(X,Y):-padre(Z,X),padre(Z,Y),not(X==Y).
hermano(X,Y):-padre(Z,X),padre(Z,Y),not(X==Y),hombre(X).
hermana(X,Y):-padre(Z,X),padre(Z,Y),not(X==Y),mujer(X).



